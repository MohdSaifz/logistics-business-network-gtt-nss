<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:vbm="sap.ui.vbm"
	xmlns:vk="sap.ui.vk"
	xmlns:core="sap.ui.core"
	xmlns:controls="com.sap.gtt.app.sample.sst.controls"
	xmlns:nsc="sap.bnc.nsc">
	<VBox height="100%" busy="{= !${map>/isStopsRoutesLoaded} }">
		<items>
			<MessageStrip
				visible="{= !!${map>/routes/hasActualEventWithInvalidGeo} }"
				text="{i18n>invalidActualEventLocationMsg}"
				type="Warning"
				showIcon="true"
				showCloseButton="true"/>
			<MessageStrip
				visible="{= !!${map>/routes/hasLocationWithInvalidGeo} }"
				text="{i18n>invalidPlannedEventLocationMsg}"
				type="Warning"
				showIcon="true"
				showCloseButton="true"/>
			<nsc:Server id="idNscServer"
					height="50rem"
					width="100%"
					appScreen="AINMaterial"
					hideProperties="geometry_id,business_object_id,business_object_type,app_reference_object_id"
					showEditButton="false" />
		</items>
		<layoutData>
			<layout:SplitterLayoutData size="auto"/>
		</layoutData>
	</VBox>
</core:FragmentDefinition>
